{
  "name": "portfolio-worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env dev",
    "start": "wrangler dev --env dev",
    "build": "tsup src/index.ts --format=esm --target=es2022 --out-dir=dist --clean --minify",
    "deploy": "wrangler deploy --env production",
