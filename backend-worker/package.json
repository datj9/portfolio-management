    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "serverless": "^4.5.0",
    "serverless-cloudflare-workers": "^1.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3",
    "wrangler": "^3.89.0"
  }
}
